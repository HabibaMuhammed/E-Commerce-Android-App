<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdminCategoryActivity">
    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Add New Product"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:textSize="26dp"
        android:textStyle="bold"
        android:textColor="@color/colorSecondaryVariant"
        />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_below="@+id/linear2_category_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Suits"
            android:layout_width="98dp"
            android:layout_height="34dp"
            android:background="@drawable/input_design"
            android:gravity="center"
            android:text="Suits"
            android:textAlignment="center"
            android:textColor="@color/colorSecondaryVariant"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Dresses"
            android:layout_width="111dp"
            android:layout_height="34dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/input_design"
            android:gravity="center"
            android:text="Dresses"
            android:textAlignment="center"
            android:textColor="@color/colorSecondaryVariant"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/blouses"
            android:layout_width="98dp"
            android:layout_height="34dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/input_design"
            android:gravity="center"
            android:text="Blouses"
            android:textAlignment="center"
            android:textColor="@color/colorSecondaryVariant"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_below="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/Pants"
            android:layout_width="98dp"
            android:layout_height="34dp"
            android:background="@drawable/input_design"
            android:gravity="center"
            android:text="Pants"
            android:textAlignment="center"
            android:textColor="@color/colorSecondaryVariant"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/DenimJeans"
            android:layout_width="111dp"
            android:layout_height="34dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/input_design"
            android:gravity="center"
            android:text="Denim"
            android:textAlignment="center"
            android:textColor="@color/colorSecondaryVariant"
            android:textSize="18dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/Skirts"
            android:layout_width="98dp"
            android:layout_height="34dp"
            android:background="@drawable/input_design"
            android:gravity="center"
            android:text="Skirts"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:textColor="@color/colorSecondaryVariant"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_below="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/Hoodies"
            android:layout_width="98dp"
            android:layout_height="34dp"
            android:background="@drawable/input_design"
            android:gravity="center"
            android:text="Hoodies"
            android:textAlignment="center"
            android:textColor="@color/colorSecondaryVariant"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Sweaters"
            android:layout_width="113dp"
            android:layout_height="34dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/input_design"
            android:gravity="center"
            android:text="Sweaters"
            android:textAlignment="center"
            android:textColor="@color/colorSecondaryVariant"
            android:textSize="18dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/Coats"
            android:layout_width="98dp"
            android:layout_height="34dp"
            android:background="@drawable/input_design"
            android:gravity="center"
            android:text="Coats"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:textColor="@color/colorSecondaryVariant"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear4_category_layout"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_below="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/Glasses"
            android:layout_width="98dp"
            android:layout_height="34dp"
            android:background="@drawable/input_design"
            android:gravity="center"
            android:text="Glasses"
            android:textAlignment="center"
            android:textColor="@color/colorSecondaryVariant"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Watches"
            android:layout_width="113dp"
            android:layout_height="34dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/input_design"
            android:gravity="center"
            android:text="Watches"
            android:textAlignment="center"
            android:textColor="@color/colorSecondaryVariant"
            android:textSize="18dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/Shoes"
            android:layout_width="98dp"
            android:layout_height="34dp"
            android:background="@drawable/input_design"
            android:gravity="center"
            android:text="Shoes"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:textColor="@color/colorSecondaryVariant"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/check_orders_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/admin_logout_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/colorSecondaryVariant"
        android:text="Check New Orders"
        android:textColor="@android:color/white"
        android:textSize="25dp"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/admin_Chart_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/colorSecondaryVariant"
        android:text="View Orders History Chart"
        android:textColor="@android:color/white"
        android:textSize="23dp"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/colorSecondaryVariant"
        android:text="Logout"
        android:textColor="@android:color/white"
        android:textSize="25dp"
        android:textAllCaps="false"
        />
</LinearLayout>