<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rrrr"
    tools:context=".ResetPasswordActivity">

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="116dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="151dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="You will be mailed with
a link for resetting your password, so insert your
Email Address here please."
        android:textColor="@color/colorSecondaryVariant"
        android:textSize="23dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="71dp" />

    <EditText
        android:id="@+id/editTextEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info"
        android:layout_marginStart="30dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:textColorHint="@color/white"
        android:hint="Write your email here"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        tools:layout_editor_absoluteY="123dp" />

    <Button
        android:id="@+id/SendEmailbtn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/editTextEmailAddress"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/colorSecondaryVariant"
android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:text="Send Email"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="190dp" />

</RelativeLayout>